generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  hash      String
  firstName String?
  lastName  String?
  Role      String

  @@map("Users")
}

model Generator {
  id        Int    @id @default(autoincrement())
  genNumber String
  capacity  Int

  @@map("Generators")
}

model Booking {
  id          Int      @id @default(autoincrement())
  genId       Int
  bookingDate DateTime
  returnDate  DateTime

  @@map("Bookings")
}
